{{> header}}
	<div class="treatments">
		<section class="anxiety">
			<div class="wrapper">
				<div class="menu-wrapper">
					<h2 class="section-title">Anxiety</h2>
					<ul class="treatment-menu tab-menu">
						{{#each anxiety}}
							<li class="{{#isEqual title "Generalized Anxiety"}}active{{/isEqual}}"><a href="#{{url-title}}">{{title}}</a></li>
						{{/each}}
					</ul>
				</div><!-- .menu-wrapper -->
				<div class="tabs-content">
					{{#each anxiety}}
						<div class="treatment {{#isEqual title "Generalized Anxiety"}}active{{/isEqual}}" id="{{url-title}}">
							{{{markdown}}}
						</div><!-- treatment -->
					{{/each}}
				</div><!-- .tabs-content -->
			</div><!-- .wrapper -->
		</section><!-- .anxiety -->
		<section class="depression">
			<div class="title-wrapper">
				<h2 class="section-title">Depression</h2>
			</div>
			<div class="wrapper">
				{{{depression.markdown}}}
			</div>
		</section><!-- .depression -->
	</div>
{{> footer}}