<form class="form-horizontal" role="form" id="appointment-request" method="post" data-url="{{config.forms.url}}{{config.forms.appointment-request}}">
	<h3>Appointment Time</h3>
	<div class="form-group">
		<label for="appointment-date" class="control-label col-sm-3">Date</label>
		<div class="col-sm-8">
			<input class="info form-control" name="appointment-date" id="app-date" value="" readonly>
		</div>
	</div>
	<div class="form-group">
		<label for="appointment-time" class="control-label col-sm-3">Time</label>
		<div class="col-sm-8">
			<input class="info form-control" name="appointment-time" id="app-time" value="" readonly />
		</div>
	</div>
	<h3>Appointment Details</h3>
	<div class="form-group">
		<label for="name" class="control-label col-sm-3">Petitioner's Name</label>
		<div class="col-sm-8">
			<input type="text" class="form-control" name="name" required>
		</div>
	</div>
	<div class="form-group">
		<label for="email" class="control-label col-sm-3">Your Email</label>
		<div class="col-sm-8">
			<input type="email" class="form-control" name="email" required>
		</div>
	</div>
	<div class="form-group">
		<label for="phone" class="control-label col-sm-3">Your Phone Number</label>
		<div class="col-sm-8">
			<input type="tel" class="form-control" name="phone" required>
		</div>
	</div>
	<div class="form-group">
		<label for="attorneyName" class="control-label col-sm-3">Attorney That Referred You</label>
		<div class="col-sm-8">
			<input type="attorney" class="form-control" name="attorneyName" required>
		</div>
	</div>
	<div class="form-group">
		<label for="attorneyPhone" class="control-label col-sm-3">Attorney's Phone Number</label>
		<div class="col-sm-8">
			<input type="attorneyPhone" class="form-control" name="attorneyPhone" required>
		</div>
	</div>
	<div class="form-group">
		<label for="petition" class="control-label col-sm-3">Petition Type</label>
		<div class="col-sm-8">
			<select id="petition" class="form-control" disabled>
				<option value="hardshipwaver">Hardship waiver or forgiveness</option>
				<option value="vawa">VAWA domestic violence</option>
				<option value="asylum">Asylum</option>
				<option value="uvisa">U-visa as a victim of a violent crime</option>
				<option value="other">Other</option>
			</select>
		</div>
	</div>
	<div class="form-group">
		<label for="comment" class="control-label col-sm-3">Comment</label>
		<div class="col-sm-8">
			<textarea class="form-control" rows="3" name="comment"></textarea>
		</div>
	</div>
	<input type="hidden" id="therapist-input" name="therapist" value=""/>
	<input type="hidden" id="therapist-email" name="therapist-email" value=""/>
	<p class="help-block">* Please note that your appointment is NOT booked until you receive a confirmation from us.</p>
	<div class="form-group">
		<div class="col-sm-9">
			<div class="checkbox disclaimer">
				<label>
					<input type="checkbox" name="disclaimer" value="acknowledged" required>The complete privacy of personal information transmitted over the Internet cannot be guaranteed by CBTA, LLC. By using this form, you are acknowledging that you accept responsibility for any risk of exposure to your personal health care information or personal identifiers. If you have concerns about this, we encourage you to contact us via more conventional means such as telephone, fax or the United States Postal Service.
				</label>
			</div>
		</div>
	</div>
	<input type="hidden" name="form_id" value="{{config.forms.appointment-request}}"/>
	<p class="error"></p>
	<input type="submit" value="Request Appointment"/>
</form>
